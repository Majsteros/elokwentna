<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="arkadiuszpalka.elokwentna.MainActivity">

    <ProgressBar
        android:id="@+id/indeterminate_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:indeterminate="true"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/frame_fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize">
    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorAccent"
        app:itemBackground="@color/colorAccent"
        app:itemIconTint="@drawable/selector_bottombar_state"
        app:itemTextColor="@drawable/selector_bottombar_state"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:menu="@menu/bottombar">
    </android.support.design.widget.BottomNavigationView>

</FrameLayout>
